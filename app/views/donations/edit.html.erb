<div class="redbox center">
	<h1 style="width:270px">New contribution</h1>


	<%= simple_form_for(@donation, html: { class: "form"}) do |f| %>

	  	<%= f.error_notification %>

	  	<%= f.input :name %>
		<%= f.input :amount, as: :string, :input_html => { :value => "#{@donation.amount/100}.#{@donation.amount%100} â‚¬" } %>
	  	<%= f.input :comment, as: :string, input_html: { class: 'commentfield', maxlength: 140 } %>

	  	<div>
			<%= link_to 'Back', root_path, class: "back" %><%= f.button :submit, 'Continue', id: 'submit', class: 'redbutton'%>
