<h1>Editing donation</h1>

<%= simple_form_for(@donation) do |f| %>
  <%= f.error_notification %>

  <%= f.input :amount, as: :string, :input_html => { :value => "#{@donation.amount/100}.#{@donation.amount%100}" } %>
  <%= f.input :name %>
  <%= f.input :comment %>
  <%= f.button :submit %>

<% end %>

<%= link_to 'Show', @donation %> |
<%= link_to 'Back', donations_path %>
