<div class="redbox center">
	<h1>New contribution</h1>

	<%= simple_form_for(@donation, html: { class: "form"}) do |f| %>

	  	<%= f.error_notification %>

	  	<%= f.input :name %>
	  	<%= f.input :amount, as: :string %>
	  	<%= f.input :comment, as: :string, input_html: { id: 'commentfield' } %>

	  	<div>
			<%= link_to 'Back', root_path, style: "display:inline-block;width:100px" %><%= f.button :submit, id: 'submit', class: 'redbutton'%>
		</div>
	<% end %>


</div>
